# TikFinity Configuration
TIKFINITY_ENABLED=true
TIKFINITY_WS_URL=ws://localhost:21213
TIKFINITY_SIMULATE=false
TIKFINITY_SIMULATE_FILE=./data/events.jsonl
TIKFINITY_RECONNECT_ENABLED=true
TIKFINITY_MAX_RECONNECT_ATTEMPTS=10
TIKFINITY_HEARTBEAT_INTERVAL=30000

# OBS Configuration
OBS_ENABLED=true
OBS_WS_URL=ws://127.0.0.1:4455
OBS_WS_PASSWORD=your_obs_password_here
OBS_SOURCES_MAP_PATH=../../config/sources_map.json

# OpenRouter API
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ElevenLabs API (Text-to-Speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=C7VHv0h3cGzIczU4biXw
ELEVENLABS_VOLUME=80

# Live Core Settings
LOG_LEVEL=INFO
MAX_CONTEXT_AGE=300000
MAX_MESSAGES_PER_USER=5

# Feature Flags
TIKFINITY_CHAT_OUTBOUND=false

# Mode de connexion (development ou production)
MODE=development

# PC Bridge Configuration (MODE=production uniquement)
PC_BRIDGE_URL=ws://YOUR_PC_PUBLIC_IP:8080
PC_BRIDGE_TOKEN=your_secure_token_32_chars_minimum

# DeepSeek API (remplace OpenRouter)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

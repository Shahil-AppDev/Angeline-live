      "settings": {
        "text": "",
        "font": {
          "face": "Arial",
          "size": 48,
          "style": "Bold"
        },
        "color": "#FFFFFFFF",
        "opacity": 100,
        "outline": true,
        "outline_size": 4,
        "outline_color": "#FF000000",
        "align": "center",
